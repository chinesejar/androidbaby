<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <timeroute.androidbaby.widget.SplashView
        android:id="@+id/splash_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:duration="500"
        app:holeFillColor="@color/colorPrimaryDark"
        app:iconColor="@color/colorPrimaryDark"
        app:removeFromParentOnEnd="true"
        app:splashIcon="@drawable/ic_android"/>

    <TextView
        android:id="@+id/tv_splash_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/textColorWhite"
        android:textSize="20sp"
        android:text="@string/app_name"/>

</RelativeLayout>
